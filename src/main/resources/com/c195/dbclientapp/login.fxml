      <VBox prefHeight="400.0" prefWidth="500.0">
         <children>
            <Label fx:id="loginLabel" alignment="CENTER" maxHeight="50.0" prefHeight="50.0" prefWidth="100.0" style="-fx-font-weight: bold;" text="Login">
               <VBox.margin>
                  <Insets left="200.0" top="20.0" />
