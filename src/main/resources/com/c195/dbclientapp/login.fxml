                  <Label fx:id="userNameLabel" prefHeight="30.0" prefWidth="100.0" style="-fx-font-weight: bold;" text="Username:">
                     <HBox.margin>
                        <Insets left="100.0" top="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="userNameTxt" alignment="CENTER" maxWidth="175.0" prefHeight="30.0" prefWidth="175.0">
                     <HBox.margin>
                        <Insets left="25.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="userPasswordLabel" prefHeight="30.0" prefWidth="100.0" style="-fx-font-weight: bold;" text="Password:">
                     <HBox.margin>
                        <Insets left="100.0" top="20.0" />
                     </HBox.margin>
                  </Label>
                  <PasswordField fx:id="userPasswordTxt" accessibleRole="PASSWORD_FIELD" alignment="CENTER" maxWidth="175.0" prefHeight="30.0" prefWidth="175.0">
